<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/main"
	app:startDestination="@id/mapFragment">

	<fragment
		android:id="@+id/mapFragment"
		android:name="com.example.mymapbox.MapFragment"
		android:label="Map"
		tools:layout="@layout/fragment_map">
		<action
			android:id="@+id/action_mapFragment_to_searchFragment"
			app:destination="@id/searchFragment"
			app:launchSingleTop="true" />
		<action
			android:id="@+id/action_mapFragment_to_preferenceFragment"
			app:destination="@id/preferenceFragment"
			app:launchSingleTop="true" />
	</fragment>
	<fragment
		android:id="@+id/searchFragment"
		android:name="com.example.mymapbox.search.SearchFragment"
		android:label="Search"
		tools:layout="@layout/fragment_search" />
	<fragment
		android:id="@+id/preferenceFragment"
		android:name="com.example.mymapbox.MapPreferenceFragment"
		android:label="Settings" />
</navigation>